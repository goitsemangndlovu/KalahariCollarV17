@model IEnumerable<KalahariCollarV17.Models.Pet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KalahariCollar.styles.css" asp-append-version="true" />
</head>
<h1>Pets</h1>

<body class="mainbody">
<p>
    <a class="btn btn-primary" asp-action="Create">Add New Pet</a>
</p>
<div class="card-columns">
@foreach (var item in Model)
{
    <div class="card">
        <div class="row">
            <h1>@item.Name</h1>
            <div class="buttons-col">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                            <a class="btn btn-primary" asp-controller="Pets" asp-action="Details" asp-route-id="@item.Id">Profile</a>
                    </li>
                    <li class="nav-item">
                            <a class="btn btn-primary" asp-controller="Pets" asp-action="Edit" asp-route-id="@item.Id">Edit </a>
                    </li>
                    <li class="nav-item">
                            <a class="btn btn-primary" asp-controller="Pets" asp-action="Location" asp-route-id="@item.Id">Track</a>
                    </li>
                    <li class="nav-item">
                            <a class="btn btn-primary" asp-controller="Pets" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </li>
                </ul>
            </div>
            <div class="track-col">
            </div>
        </div>
    </div>
}

    </div>
</body>

